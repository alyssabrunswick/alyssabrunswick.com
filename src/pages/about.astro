---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.svelte';
import Nav from '../components/Nav.svelte';
---

<html lang="en">
	<head>
		<MainHead title="About | Alyssa Brunswick" description="About Alyssa Brunswick" />
		<style lang="scss">
			.heroImg {
				object-fit: cover;

				img {
					width: 100%;
					height: 100%;
				}
			}

			.bio {
				font-size: var(--f-u1);
				line-height: 2;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>About Alyssa</h1>
			<div class="heroImg">
				<img width="1400" height="350" src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?auto=format&fit=crop&w=1400&h=350&q=75" />
			</div>
			<div class="bio wrapper wrapper__readable mt8">
				<p>
					My name is Alyssa Brunswick. This is my portfolio site I'm attempting to build with astro and Svelte. 
				</p>
			</div>
		</div>
		<Footer />
	</body>
</html>
